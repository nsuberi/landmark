@import "config"
@import "analysis"

.launch-dialog-title
	margin 0

.launch-dialog-subtitle
	font-style italic
	font-size 14px
	
.launch-dialog-content
	font-size 15px
	
.dijitDialog .dijitDialogCloseIcon
	outline none !important

.brMap
	background-color $mainBackground
	position absolute
	bottom 0
	right 0
	left 0
	top 0
	
.brMap .map-component	
	box-sizing initial
	position absolute
	z-index 30
	
.brMap .esriControlsBR
	right 300px
	
.brMap .HomeButton .home
	background url('images/ico-home.png') no-repeat center
	border-bottom 1px solid black
	background-color white
	border-radius 0
	cursor pointer
	height 30px
	width 30px
	padding 0
	
.brMap .HomeButton .home:hover
	background-color $esriHover
	
.brMap .legend-container
	width 220px
	right 20px
	bottom 0
	
.brMap .legend-title-pane
	border-bottom 1px solid $mainBorder
	padding-right 5px
	text-align right
	
.brMap .legend-title
	border-radius-top(3px)
	border 1px solid $mainBorder
	display inline-block
	background white
	line-height 30px
	border-bottom 0
	padding 0 20px
	font-size 14px
	height 30px
	
.brMap .legend-content
	border 1px solid $mainBorder
	background-color white
	border-bottom 0
	border-top 0

.brMap .legend-content:not(.active)
	overflow hidden

.brMap .button-widget
	background-color white
	border 1px solid black
	border-radius(5px)
	height 30px
	width 30px
	right 20px
	
.brMap .basemap-button
.brMap .basemap-connector
	top 120px
	
.brMap .locator-button
	top 160px

.brMap .share-button
.brMap .share-connector	
	top 200px

.brMap .basemap-icon
	background url('images/basemap.png')	
	
.brMap .share-icon
	background url('images/share-icon.png')
	background-position -3px -1px
	
.brMap .basemap-icon
.brMap .share-icon
	height 100%
	width 100%
	
.brMap .LocateButton .zoomLocateButton
	background url('images/locate.png')

.brMap .LocateButton .zoomLocateButton:hover
	background url('images/locate.png')
	
.brMap .LocateButton .zoomLocateButton
.brMap .basemap-icon
	background-position -2px -2px
	
.brMap .LocateButton .zoomLocateButton:hover
.brMap .basemap-icon:hover
	background-position -2px -36px
	
.brMap .share-icon:hover
	background-position -3px -36px
	
.brMap .basemap-container
	border 1px solid black
	background-color white
	border-radius(5px)
	overflow-y auto
	height 400px
	width 380px
	right 60px
	top 65px
	
.brMap .esriBasemapGalleryLabelContainer
	font-size 13px
	padding 5px 0
	
.brMap .esriBasemapGallery
	margin 10px 5px
	
.brMap .share-container
	border 1px solid black
	background-color white
	border-radius(5px)
	overflow-y auto
	min-width 50px
	height 60px
	width auto
	right 60px
	top 185px

.brMap .connector
	border-bottom 1px solid black
	border-top 1px solid black
	background-color white
	height 30px
	right 48px
	width 13px
	
.brMap .tree-widget-container
	left 20px
	top 20px
	
.brMap .tree-widget-title-pane	
	border 1px solid $mainBorder
	background-color white
	box-sizing initial
	line-height 32px
	height 32px
	
.brMap .tree-width
	width 280px
	
.brMap .tree-title-text
	border-right 1px solid $mainBorder
	display inline-block
	
.brMap .tree-title-text span
	padding 0 12px

.brMap .tree-container-toggle
	display inline-block
	padding 0 12px

.brMap .tree-content
	background-color white
	position absolute
	overflow hidden
	
.brMap .tree-content.active
	border 1px solid $mainBorder
	border-top 0

.brMap .tree-content .tester
	height 200px
	
.brMap .analysis-button
	border 1px solid $mainBorder
	border-radius(5px)
	background-color white
	text-align center
	line-height 32px
	height 32px
	right 70px
	top 20px
	
.brMap .analysis-button-label
.brMap .data-completeness-label
.brMap .data-completeness-toggle
	padding 0 10px
	
.brMap .data-completeness-container
	border 1px solid $mainBorder
	border-radius(5px)
	background-color white
	text-align center
	line-height 32px
	height 32px
	right 160px
	top 20px
	
.brMap .data-completeness-toggle
	border-right 1px solid $mainBorder
	display inline-block
	height 32px
	
.brMap .geocoder-container
	right 415px
	top 20px
	
.brMap .simpleGeocoder .esriGeocoder input
	box-shadow none
	height 20px
	
.brMap .tree-data-section
	margin 10px
	
.brMap .tree-data-section input[type='radio']
	margin 0
	
body:not(.mobile) .launch-map-button
	margin-right 10px
	float right