.legend-component-container.collapsed
  height 32px

.legend-item-group
  margin-left 10px
  font-weight bold

.legend-item-name
  margin-left 25px
  margin-bottom -5px
  font-size 11px

.legend-component-controls
  background-color #055d7d
  color #fff
  font-family Raleway
  font-size 14px
