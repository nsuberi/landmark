.tree-widget-container
  left 20px
  top 20px


.tree-widget-title-pane
  background-color white
  box-sizing initial
  line-height 32px
  height 32px
  cursor pointer

.tree-width
  width 360px

.mobile .tree-width
  width 100%

.layer-content
.layer-tab-container
.layer-tab-content
  height 100%
  max-height 425px

.layer-tab-container
  width 360px

body:not(.mobile) .layer-tab-container .tab-panel
  padding 0 10px 10px
  background #E3E4E5
  position relative
  overflow-y auto
  overflow-x hidden

.layer-tab-controls
  background #E3E4E5
  text-align center
  padding-top 7px

.community-tab
  display inline-block
  padding 14px 20px
  font-weight bold
  cursor pointer
  font-size 14px
  color #25a3d9
  &.active
    background white

.community-layer-list
.national-level-layer-lists
  background white
  padding 10px

@import "nationalLayerList"
@import "communityLayerList"
