.tree-widget-container
  bottom 20px
  left 20px
  top 20px

.tree-widget-title-pane
  background-color white
  box-sizing initial
  line-height 32px
  height 32px

.tree-width
  width 360px

.mobile .tree-width
  width: 100%;

.layer-content
.layer-tab-container
.layer-tab-content
  height 100%

.layer-tab-container
  width 360px

body:not(.mobile) .layer-tab-container .tab-panel
  // The minus 100 is to account for the space above and beloe the container
  max-height calc(100% - 100px)
  padding 0 10px 10px
  background #E3E4E5
  position relative
  overflow-y auto
  overflow-x hidden

.layer-tab-controls
  background #E3E4E5
  text-align center
  padding-top 7px

.community-tab
  display inline-block
  padding 14px 20px
  font-weight bold
  cursor pointer
  font-size 14px
  color #005E7A
  &.active
    background white

.community-layer-list
.national-level-layer-lists
  background white
  padding 10px

@import "nationalLayerList"
@import "communityLayerList"
