.tree-widget-container
  height 95%


.tree-widget-title-pane
  background-color white
  box-sizing initial
  line-height 32px
  height 32px
  cursor pointer

.tree-width
  width 360px

.mobile .tree-width
  width 100%

#layer-content
  height 100%

.layer-tab-container
  width 360px
  max-height 90%
  overflow-y auto
  overflow-x hidden

body:not(.mobile) .layer-tab-container .tab-panel
  padding 5px 5px 5px
  background #E3E4E5
  position relative
  overflow-y auto
  overflow-x hidden

.layer-tab-controls
  background #E3E4E5
  text-align center
  padding-top 7px

.community-tab
  display inline-block
  padding 12px 20px
  font-weight bold
  cursor pointer
  font-size 14px
  color #25a3d9
  &.active
    background white

.community-layer-list
.national-level-layer-lists, .national-level-layer-list
  background white
  padding 10px

.national-level-layer-lists
  margin-top 25px

.disclaimer
  font-size 12px
  width 90%
  margin-left 20px
  margin-top 5px
  padding 2px
  font-style italic

@import "nationalLayerList"
@import "communityLayerList"

.layer-selection-drop-container
  color #005e7a
  font-size 0.8em
  background-color white
  margin-bottom 2px

.layer-selection-drop-text
  cursor pointer
  margin-left 20px
  padding 5px
  width 85%

.land-map-layer-selection
  padding-top 12px
