@import "config"

body
	font-family Arial Narrow
	
#backgroundImage
	background url(images/homeBackground.jpg)
	height 100%
	width 40%
	float left
	margin-right 20px
	
#homeText
	padding 10px
	margin-right 100px
	
#launch-map
	background-color #036
	padding-bottom 10px
	padding-top 10px
	padding-left 15px
	padding-right 15px

.introTextSub
	color #448BD2
	
	cursor pointer

.introTextTitle
	color #036
	font-weight bold
	font-size 17px

@media (max-width: 1200px)
	#backgroundImage
		width 60%
		
@media (max-width: 800px)
	#backgroundImage
		width 100%
	#homeText
		position absolute
