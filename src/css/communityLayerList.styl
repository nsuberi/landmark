.community-layer-type-label
  font-weight bold

.layer-category
  padding-left 20px
  color gray

.layer-node
  padding-left 45px
  color #055D7D

.layer-category
.layer-node
  font-size 12px
  margin 10px 0

.layer-checked-true, .parent-layer-checked-true
  background url('images/check.svg')
  background-repeat no-repeat
  height 14px
  width 20px
  display inline-block
  vertical-align sub
  cursor pointer

.layer-checked-false, .parent-layer-checked-false
  background url('images/uncheck.svg')
  background-repeat no-repeat
  height 14px
  width 20px
  display inline-block
  vertical-align sub
  cursor pointer

.parent-layer-help
  background url('images/icon_question_mark.svg') no-repeat
  height 16px
  width 16px
  vertical-align middle
  cursor pointer
  margin-left 10px
