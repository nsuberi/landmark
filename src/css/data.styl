@import "config"

body
	font-family Arial

.root
	background-color white

#dataTitle
	max-width 1120px
	margin-left 0
	text-align center
	*
		font-style normal
	@media (min-width: 1500px)
		margin-left 250px
	
// table, th, td
// 	border 1px solid #eee
	
// .odd-row-names
// 	background-color #F3F7FC !important

table

	innerBorderColor = lighten(#ccc, 35%)

	border solid #ccc !important
	border-width 0 1px 1px 0 !important

	td
		border-left solid 1px innerBorderColor !important
		
	tr:nth-child(even)
		background #F3F7FC !important
	
	tr:not(:first-child), td
		border-top solid 1px innerBorderColor !important

.names-top-row
	// background-color #4677B3
	width 100%
	color white
	border none !important
	
.names-top-row > td
	font-size 15px !important
	
#dataChart
	padding-left 100px
	

#data-completeness
	border none
	border-collapse collapse

u
	text-decoration underline

	
#indicators-table td, #names-table td, #data-completeness td
	padding 5px
	font-size 14px

#indicators-table
	// border 1px solid #B7B7B7
	border-spacing 0

#names-table
	border-collapse collapse
	border-spacing 0
	// border 1px solid #4677b3
	
#names-table tr
	border 1.5px solid #2fa3d9


#indicators-table th, #indicators-table td, #names-table th, #names-table td
	border none
	border-spacing 0

.accordion-Controls
	float left
	width 300px
	margin-left 250px
	position relative
	z-index 5
	
.accordion-Title
	border-top 1px solid #ccc
	border-bottom 1px solid #ccc
	height 55px
	padding-left 50px
	background #f2f2f3
	
.caret-down
	display inline-block
	height 10px
	width 8px
	background url(images/static-icons.png) 0 -222px no-repeat
	
.panel-Title
	display block
	line-height 56px
	padding-left 46px
	border-bottom 1px solid #ccc
	cursor pointer
	font-size 14px
	//font-family fira_sans_otmedium
	color #464052
	background rgba(242, 242, 243, 0.49) !important
	border-right 1px solid #ccc

.data-Accordion-Title
	text-align left

.dataImageLeft
	cursor pointer
	margin-top 400px
	

#injectPartners > p
	width 475px
	float right
	margin-top 0
	mergin-left 5px
	
	
.data-Accordion
	float left
	width 800px
	border-left 1px solid #ccc
	padding 10px 20px
	margin-left -1px
	font-size 15px
	
	ul li 
		margin-top 1em
		
	a
		color #2FA3D9
		&:hover
			text-decoration underline
			
	table
		display block
		margin 1.5em 0
		//
		// td
		// 	border-top solid 1px #eee !important
		//
		// .odd-row
		// 	background-color #F3F7FC
		
.dataSteeringText li
	list-style none
	padding-top 10px

.active
	background white !important
	border-bottom 4px solid #055d7d
	border-right none
	
@media (max-width: 1500px)
	.accordion-Controls
		margin-left 0px
		
@media (max-width: 1050px)
	.top-bar .name h1 a
		font-size 16px
	.wri-header-attribution
		display none
		
@media (max-width: 1000px)
	.data-Accordion
		width auto
	.dataImageLeft
		display block
		margin-top 400px !important
		

@media (max-width: 800px)
	#dataChart
		padding-left 0
		
@media (max-width: 600px)
	#dataChart
		width: 400px
		
	
	