@import "config"

.mobile-menu
	background-color white
	position absolute
	width 295px
	bottom 0
	left 0
	top 0

.mobile-menu-toggle-button
	background url('images/ico-gear.png') no-repeat center #FFF
	background-size 19px
	text-align center
	// line-height 28px
	// font-size 32px
	height 30px
	width 30px
	// color #777
	left 20px
	top 20px

.mobile-menu-close-button
	background url('images/close_x_symbol.png') no-repeat center
	background-size 18px
	position absolute
	height 16px
	width 16px
	right 16px
	top 20px

.mobile-menu-content
	position absolute
	overflow-y auto
	padding 0 10px
	bottom 5px
	top 50px
	right 0
	left 0

.mobile-menu:not(.open)
	display none

.mobile-menu .segmented-menu-button
	text-align center
	padding 5px 15px
	padding-left 20px
	color #808080
	background-color #e4e4e4
	font-size 13px
	font-weight bold

.mobile-menu .segmented-menu-button.active
	background-color #2FA3D9
	color white
	background url("images/icon_toggle_checkmark.svg") no-repeat #2fa3d9 10% 50%


.mobile-menu-content:not(.active)
	display none

.mobile-menu .menu-controls
	text-align center
	padding-top 17px
	background-color #055d7d
	height 50px
	margin-left -12px

.mobile-menu .segmented-menu-button:first-of-type
	border-radius-left(5px)
	border-right 1px solid #b8b9b9

.mobile-menu .segmented-menu-button:last-of-type
	border-radius-right(5px)
	border-left 1px solid #b8b9b9

body:not(.mobile) .mobile-menu
body:not(.mobile) .mobile-menu-toggle-button
	display none

/** These Styles are Activated when the Helper class adds a mobile class to the body tag **/
.mobile .launch-map-button
	display block
	margin 0 auto

.mobile .basemap-container
	height 250px
	width 150px

.mobile .esriBasemapGallery
	margin 10px

.mobile .basemap-container
	top 20px

.mobile .esriControlsBR
	right 5px

.mobile #legend
	max-height inherit

.mobile .data-completeness-container
.mobile .tree-widget-container
.mobile .geocoder-container
.mobile .analysis-button
.mobile #legend-component
.mobile .title-area .name h1
.mobile .esriAttribution
.mobile #upload-shapefile
	display none


.minimizedAdjust
	border-top-right-radius 5px
	border-bottom-right-radius 5px
	-moz-border-radius-topright 5px
	-moz-border-radius-bottomright 5px
	-webkit-border-top-right-radius 5px
	-webkit-border-bottom-right-radius 5px

.minimizedHide
	display none !important


