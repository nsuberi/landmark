@media (max-width: 800px)
	// .title-area .name h1
	// 	display none
	#mobile-menu-toggle
		display block !important //This 'important' tag is making it so the mobile menu never disappears after a toggle, hide, resize operation, but it also forces us to always show the menu icon (even when the menu is open)
	#data-completeness-container, #analysis-button
		display none !important

	.legend-component-container
		max-height none
		width 270px
		right inherit
		top 0
		left 5px

	.legend-component-controls
		display none

	.legend-component-content
		max-height none
		padding 5px
		width 100%
		overflow-x hidden

	.legend-item-name
		margin-left 5px

	.legend-item-group
		margin-left 0px

	.legend-item-name
		font-size 10px
		width 85%

	.layer-tab-container
		width 100%

	.community-tab
		text-align center
		padding 5px 10px
		padding-left 15px
		color #808080
		font-size 13px
		font-weight bold
		background-color #e4e4e4

	.layer-tab-controls
		background-color white

	.community-tab.active
		background-color #2fa3d9
		color #fff
		background url("images/icon_toggle_checkmark.svg") no-repeat #2fa3d9 2% 50%

	.community-tab:first-of-type
		border-radius-left(5px)
		border-right 0

	.community-tab:last-of-type
		border-radius-right(5px)
		border-left 0

	#draw-shape-icon
		display none

	#removeGraphic:before, #remove-graphics:before
		background none

	#remove-graphics, #draw-shape-words
		font-size 13px

	#remove-graphics, #draw-shape
		width 200px
		margin 10px !important
		margin-left 0px !important
		padding 10px !important
		text-indent inherit
		left 0

	#removeGraphic
		margin 0px !important


@media (max-width: 500px)
	#legendMenuButton
		border-top-right-radius 5px
		border-bottom-right-radius 5px
		-moz-border-radius-topright 5px
		-moz-border-radius-bottomright 5px
		-webkit-border-top-right-radius 5px
		-webkit-border-bottom-right-radius 5px
	#toolsMenuButton
		display none !important
