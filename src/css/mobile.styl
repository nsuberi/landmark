@import "config"

.mobile-footer
	display none

@media (max-width: 500px)
	.mobile-footer
		display block
		bottom 0
		position absolute
		z-index 1000
		width 100%
		background white
		height 3.5em

	.mobile-footer-container
		height 100%
		width 100%

	.mobile-footer-child
		height 100%
		width 25%
		display inline-block
		line-height 3.5em
		text-align center

	.tree-widget-container
		height 75%
		z-index 100
		left 5%
		width 90%
		bottom 0

	.layer-tab-container, .tree-width
		width 100%
