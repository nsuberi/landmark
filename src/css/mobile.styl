@import "config"

.mobile-footer
	display none

@media (max-width: 500px)
	.mobile-footer
		display block
		bottom 0
		position absolute
		z-index 1000
		width 100%
		background white
		height 3.5em

	.mobile-footer-container
		height 100%
		width 100%

	.mobile-footer-child
		height 100%
		width 25%
		display inline-block
		line-height 3.5em
		text-align center

	.tree-widget-container
		height 75%
		z-index 100
		left 5%
		width 90%
		bottom 4em

	.tree-container-toggle
		display none

	.layer-tab-container, .tree-width
		width 100%

	.arcgisSearch .searchGroup .searchInput
		width 150px !important

	.search-button, .report-button, .analysis-button
		right 70px
		z-index 100
		top auto
		bottom 15em

	.report-button, .search-button, .analysis-button
		left 20px
		right 0
		margin-left auto
		margin-right auto
		width 50%

	.search-button
		left 0
		width calc(50% + 25px)

	.disclaimer
		margin-top auto

	.national-level-layer-lists
		margin-top 30px
